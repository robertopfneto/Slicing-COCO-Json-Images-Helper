# Dataset Tiling Configuration

# Tile dimensions
TILE_WIDTH=512
TILE_HEIGHT=512

# Tile overlap in pixels
TILE_OVERLAP=0

# Minimum object coverage to keep annotation (0.0 - 1.0)
MIN_OBJECT_COVERAGE=0.3

# Output format (currently only COCO supported)
OUTPUT_FORMAT=COCO

# Dataset paths
INPUT_PATH=./dataset
OUTPUT_PATH=./output

# Dataset split ratios
TRAIN_SPLIT=0.8
VAL_SPLIT=0.1
TEST_SPLIT=0.1

# Processing configuration
BATCH_SIZE=32
NUM_WORKERS=4
SAVE_ORIGINAL=true
TILES_ONLY=false